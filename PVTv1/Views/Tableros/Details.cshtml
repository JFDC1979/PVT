@model PVTv1.Models.TableroViewModel

@{
    ViewData["Title"] = "Detalles del Tablero";
}

@section Styles {
    <style>
        /* (Tus estilos para el tema oscuro) */
        body {
            background-color: #0d2033;
            color: #f8f9fa;
        }

        .card-details {
            background-color: #152230;
            border: 1px solid #304a69;
            color: #f8f9fa;
        }

            .card-details dt {
                font-weight: bold;
                color: #adb5bd;
            }

            .card-details dd {
                margin-bottom: .75rem;
            }

        .btn-primary-custom {
            background-color: #0056b3;
            border-color: #0056b3;
        }

        .btn-secondary-custom {
            background-color: #495057;
            border-color: #495057;
        }

        .btn-action-editar {
            background-color: #ffc107;
            border-color: #ffc107;
            color: #000;
        }

        .btn-action-eliminar {
            background-color: #dc3545;
            border-color: #dc3545;
            color: white;
        }

        .breadcrumb-item a {
            color: #adb5bd;
            text-decoration: none;
        }

        .breadcrumb-item.active {
            color: #dee2e6;
        }
    </style>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
}

<div class="container-fluid mt-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Inicio</a></li>
            <li class="breadcrumb-item"><a asp-controller="Tablero" asp-action="Index">Tableros</a></li>
            <li class="breadcrumb-item active" aria-current="page">Detalles: @Model.NombreTablero</li> @* Ahora Model.NombreTablero es válido *@
        </ol>
    </nav>

    <h2 class="mb-4 text-center">@ViewData["Title"]: @Model.NombreTablero</h2>

    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-7">
            <div class="card card-details p-4">
                <dl class="row">
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.NombreTablero)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.NombreTablero)
                    </dd>

                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.Descripcion)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Descripcion)
                    </dd>

                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.URL)
                    </dt>
                    <dd class="col-sm-8">
                        <a href="@Model.URL" target="_blank" rel="noopener noreferrer">@Html.DisplayFor(model => model.URL)</a>
                    </dd>

                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.Grupo)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Grupo)
                    </dd>

                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.Orden)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Orden)
                    </dd>

                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.FechaModificacion)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.FechaModificacion)
                    </dd>
                </dl>

                <div class="mt-4 d-flex justify-content-start">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-action-editar me-2">
                        <i class="fas fa-edit"></i> Editar
                    </a>
                    <form asp-action="Delete" asp-route-id="@Model.Id" method="post" onsubmit="return confirm('¿Está seguro de que desea eliminar este tablero?');" style="display:inline;">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-action-eliminar me-2">
                            <i class="fas fa-trash"></i> Eliminar
                        </button>
                    </form>
                    <a asp-action="Index" class="btn btn-secondary-custom">
                        <i class="fas fa-arrow-left"></i> Volver al Listado
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>