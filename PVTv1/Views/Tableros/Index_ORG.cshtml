
@model PVTv1.Models.TablerosPageViewModel 

@{
    ViewData["Title"] = "Listado de Tableros";
    <h1>Vista Index de Tableros</h1>
    <p>Si ves esto, la vista se encontró.</p>
}


@section Styles {
    <style>
        
        body {
            background-color: #0d2033;
            color: #f8f9fa;
        }
        .navbar-custom { 
            background-color: #003366;
        }
        .table-dark-custom {
            --bs-table-bg: #1a2b3c;
            --bs-table-striped-bg: #20354d;
            --bs-table-hover-bg: #253f5a;
            --bs-table-border-color: #304a69;
            color: #f8f9fa;
        }
        .table-dark-custom th {
            background-color: #152230;
        }
        .breadcrumb-item a {
            color: #adb5bd;
            text-decoration: none;
        }
        .breadcrumb-item.active {
            color: #dee2e6;
        }
        .btn-action-ver { background-color: #0d6efd; border-color: #0d6efd; color: white; }
        .btn-action-editar { background-color: #ffc107; border-color: #ffc107; color: #000; }
        .btn-action-eliminar { background-color: #dc3545; border-color: #dc3545; color: white; }

        .card {
             background-color: #152230;
             border: 1px solid #304a69;
        }
        .form-control-dark {
            background-color: #1a2b3c;
            border: 1px solid #304a69;
            color: #f8f9fa;
        }
        .form-control-dark::placeholder {
            color: #adb5bd;
        }
        .form-control-dark:focus {
            background-color: #20354d;
            border-color: #40689a;
            color: #f8f9fa;
            box-shadow: none;
        }
        .btn-secondary-custom {
            background-color: #495057;
            border-color: #495057;
        }
        .btn-primary-custom {
            background-color: #0056b3;
            border-color: #0056b3;
        }
    </style>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
}


<div class="container-fluid mt-4">
    
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Inicio</a></li>
            <li class="breadcrumb-item active" aria-current="page">Tableros</li>
        </ol>
    </nav>

    <h2 class="mb-4 text-center">@ViewData["Title"]</h2>

    <!-- Barra de búsqueda y botón Agregar -->
    <div class="row mb-3">
        <div class="col-md-8">

            <form asp-controller="Tablero" asp-action="Index" method="get">
                <div class="input-group">
                    <input type="text" name="searchTerm" class="form-control form-control-dark" placeholder="Buscar por nombre, descripción, grupo..." value="@Model.SearchTerm">
                    <button class="btn btn-primary-custom" type="submit">
                        <i class="fas fa-search"></i> Buscar
                    </button>
                </div>
            </form>
        </div>
        <div class="col-md-4 text-md-end mt-2 mt-md-0">
            <a asp-controller="Tablero" asp-action="Index" class="btn btn-secondary-custom me-2">Resetear</a>
            <a asp-controller="Tablero" asp-action="Create" class="btn btn-primary-custom">
                <i class="fas fa-plus"></i> Agregar Tablero
            </a>
        </div>
    </div>

    <!-- Tabla de Tableros -->
    <div class="card">
        <div class="table-responsive">
            <table class="table table-dark-custom table-striped table-hover mb-0">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Tableros.First().NombreTablero)</th>
                        <th>@Html.DisplayNameFor(model => model.Tableros.First().Descripcion)</th>
                        <th>@Html.DisplayNameFor(model => model.Tableros.First().URL)</th>
                        <th>@Html.DisplayNameFor(model => model.Tableros.First().Grupo)</th>
                        <th>@Html.DisplayNameFor(model => model.Tableros.First().Orden)</th>
                        <th>@Html.DisplayNameFor(model => model.Tableros.First().FechaModificacion)</th>
                        <th class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Tableros != null && Model.Tableros.Any())
                    {
                        @foreach (var item in Model.Tableros)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.NombreTablero)</td>
                                <td>@Html.DisplayFor(modelItem => item.Descripcion)</td>
                                <td><a href="@item.URL" target="_blank" rel="noopener noreferrer">@item.URL</a></td>
                                <td>@Html.DisplayFor(modelItem => item.Grupo)</td>
                                <td>@Html.DisplayFor(modelItem => item.Orden)</td>
                                <td>@Html.DisplayFor(modelItem => item.FechaModificacion)</td>
                                <td class="text-center">
                                    <a asp-controller="Tablero" asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-action-ver me-1" title="Ver"><i class="fas fa-eye"></i> Ver</a>
                                    <a asp-controller="Tablero" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-action-editar me-1" title="Editar"><i class="fas fa-edit"></i> Editar</a>
                                    @* Para Eliminar, es mejor usar un formulario POST por seguridad y buenas prácticas HTTP *@
                                    <form asp-controller="Tablero" asp-action="Delete" asp-route-id="@item.Id" method="post" style="display:inline;" onsubmit="return confirm('¿Está seguro de que desea eliminar este tablero?');">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-sm btn-action-eliminar" title="Eliminar"><i class="fas fa-trash"></i> Eliminar</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7" class="text-center">No hay tableros para mostrar.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
 
}